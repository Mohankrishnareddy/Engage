<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Register">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>

    <!-- Login progress -->


    <ScrollView
        android:id="@+id/Profile_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorLightGray"
                android:hint="@string/enter_first_name"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGray"
                android:hint="Enter Surname"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tvMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/colorLightGray"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/male" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.01" />

                <RadioButton
                    android:id="@+id/tvFemale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/colorLightGray"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Female" />
            </LinearLayout>

            <EditText
                android:id="@+id/etMotherTongue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGray"
                android:hint="Mother Tongue"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGray"
                android:hint="@string/enter_email"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGray"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etConPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGray"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGray"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:padding="12dp" />


            <CheckBox
                android:id="@+id/bCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:padding="7dp"
                android:text="I Agree Terms and Conditions"/>

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorDeepPink"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/signup"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAlready_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:text="if you have an account login here !"
                android:layout_marginBottom="16dp"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textSize="19sp"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>