<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.cubicitsolution.subhamastu.Registration">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/category_border"
        android:orientation="vertical">


        <LinearLayout
            android:layout_height="239dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_height="159dp"
                android:layout_width="116dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/ivCategoryImage"
                    android:layout_height="157dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/dashboard" />


            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:padding="5dp"
                        android:text="FullName:"
                        android:textColor="#000"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:id="@+id/ivDelete"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:src="@android:drawable/ic_delete" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvProfileID"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="ProfileID"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvMobileNumber"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="MobileNumber:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="Email ID:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvSalary__Income"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="Salary/Income:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvProperty"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="Property:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />






                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">




                    <TextView
                        android:id="@+id/tvchangeImage"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.98"
                        android:layout_width="0dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="changeImage"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"

                        />



                </LinearLayout>






            </LinearLayout>



        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/category_border"
        android:orientation="vertical">


        <LinearLayout
            android:layout_height="239dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_height="159dp"
                android:layout_width="116dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/ivCategoryImage1"
                    android:layout_height="157dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/dashboard1" />


            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFullName1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:padding="5dp"
                        android:text="FullName:"
                        android:textColor="#000"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:id="@+id/ivDelete1"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:src="@android:drawable/ic_delete" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvProfileID1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="ProfileID"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvMobileNumber1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="MobileNumber:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvEmail1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="Email ID:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvSalary__Income1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="Salary/Income:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tvProperty1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:text="Property:"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />






                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">




                    <TextView
                        android:id="@+id/tvchangeImage1"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.98"
                        android:layout_width="0dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="changeImage"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"

                        />



                </LinearLayout>






            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>

