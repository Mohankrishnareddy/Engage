<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyAccount"
    android:orientation="vertical">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>


    <TextView
        android:id="@+id/maMyProfile"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:hint="@string/myprofile" />

    <TextView
        android:id="@+id/maAddPhotos"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:hint="@string/addphotos" />
    <TextView
        android:id="@+id/maMy_Preference"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:hint="@string/mypreferences" />

    <TextView
        android:id="@+id/maBookmarks"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:hint="@string/bookmarks" />
    <TextView
        android:id="@+id/maMy_Match"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:hint="@string/mymatch" />

    <TextView
        android:id="@+id/maMy_Documents"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="@string/mydocuments"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/maMy_Videos"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:gravity="center"
        android:padding="08dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:hint="@string/myvideos" />

    <TextView
        android:id="@+id/maBlocked_Profile"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_pack"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:hint="@string/blockedprofile" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">


        <include
            android:id="@+id/bottom_action_bar"
            layout="@layout/bottom_navigation_bar"/>


    </LinearLayout>

</LinearLayout>