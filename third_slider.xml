<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSlider3">


    <ImageView
        android:id="@+id/slider_img_3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_action_alert_white"
        android:layout_marginTop="150dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/slide_3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_3_title"
        android:layout_below="@id/slider_img_3"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/slide_3_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_3_desc"
        android:layout_below="@id/slide_3_title"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>